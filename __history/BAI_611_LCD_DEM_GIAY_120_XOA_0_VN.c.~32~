
#INCLUDE <TV_PICKIT2_SHIFT_1.C>
#INCLUDE <TV_PICKIT2_SHIFT_LCD.C>

SIGNED INT8 GIAY;
unsigned int8 DV, CH, TR;

VOID LCD_HIENTHI_DONGHO()
{
   LCD_GOTO_XY (0, 15) ;
   DELAY_US (20);
   LCD_DATA (GIAY / 100 + 0X30) ;
   //!   IF ( LCD_DATA (GIAY / 100 + 0X30) == "0" ) LCD_DATA (" ");
   LCD_DATA (GIAY / 10 + 0X30) ;
   //!   IF ( LCD_DATA (GIAY / 10 + 0X30) == "0" ) LCD_DATA (" ");
   LCD_DATA (GIAY % 10 + 0X30) ;

   IF (GIAY < 10)
   {
      LCD_GOTO_XY (0, 15) ;
      LCD_DATA ("  ");
   }
   
   else IF (GIAY < 100)
   {
      LCD_GOTO_XY (0, 15) ;
      LCD_DATA (" ") ;
   }
   
}

VOID MAIN()
{
   SET_UP_PORT_IC_CHOT ();
   SETUP_LCD ();
   LCD_GOTO_XY (0, 0) ;
   LCD_DATA ("DONG HO:");
   GIAY = 0;

   WHILE (TRUE)
   {
      LCD_HIENTHI_DONGHO ();
      DELAY_MS (300);
      GIAY++;
      IF (GIAY == 120) GIAY = 100;
   }
}

