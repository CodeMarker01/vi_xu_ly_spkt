
#include <tv_pickit2_shift_1.c>                                               
#include <tv_pickit2_shift_key4x4_138.c>                     

unsigned INT8 mp;                                                   

unsigned INT8 y=0;                                                       
void main()
{
   
   set_up_port_ic_chot ();
   set_tris_b (0x3c);
   xuat_32led_don_4byte (0, 0, 0, y);                        

   WHILE (true)
   {
      mp = key_4x4_dw ();
      
      IF (mp != 0xff)
      {
         IF (mp == 0)
         {
            y = 0b00000001|y;
         }

         IF (mp == 1)
         {
            y = 0b00000010|y;
         }

         IF (mp == 8)
         {
            y = 0b11111110&y;
         }

         IF (mp == 9)
         {
            y = 0b11111101&y;
         }

         xuat_32led_don_4byte (0, 0, 0, y);
      }
   }
}

   
