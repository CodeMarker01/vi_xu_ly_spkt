/*
* Hien thi 2 LM35 len led quet, led 4, LCD, GLCD
*
*
*
*
*/
// Khai bao thu vien
#include <tv_pickit2_shift_1.c> 

UNSIGNED INT8     j, solan=100; 
unsigned INT16   lm35a, lm35b;

void doc_nd_lm35a()
{
   set_adc_channel (0); lm35a = 0;
   FOR (j = 0; j<solan; j++)
   {
      lm35a = lm35a + read_adc ();
      delay_us (100) ;
   }

   lm35a = lm35a / 2.046;
   lm35a = lm35a / solan;
}

void doc_nd_lm35b()
{
   set_adc_channel (1) ;
   lm35b = 0;
   FOR (j = 0; j<solan; j++)
   {
      lm35b = lm35b + read_adc ();
      delay_us (100) ;
   }

   lm35b = lm35b / 2.046;
   lm35b = lm35b / solan;
}


