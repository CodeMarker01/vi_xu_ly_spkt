
#INCLUDE <TV_PICKIT2_SHIFT_1.C>

SIGNED INT8 I;
UNSIGNED INT8 giay = 0;
unsigned int8 phut = 0;

VOID MAIN()
{
   SET_UP_PORT_IC_CHOT ();
   XUAT_4LED_7DOAN_4SO (0XB0, 0XA4, 0XF9, 0XC0);

   WHILE (TRUE)
   {
      FOR (I = 0; I < 59; I++)
      {
         // !   XUAT_4LED_7DOAN_1SO (MA7DOAN[I]);
         XUAT_4LED_7DOAN_4SO (0XB0, 0XA4, MA7DOAN[I / 10], MA7DOAN[I % 10]);
         DELAY_MS (500);
      }

      
      FOR (I = 59; I>1; I--)
      {
         XUAT_4LED_7DOAN_4SO (0XB0, 0XA4, MA7DOAN[I / 10], MA7DOAN[I % 10]);
         DELAY_MS (500);
      }
      
      XUAT_4LED_7DOAN_4SO (0XB0, 0XA4, MA7DOAN[I / 10], MA7DOAN[I % 10]);
      DELAY_MS (500);
      giay++;
      if ( giay==60 )
      {
         phut++;
         giay=0;
      }
   }
}

