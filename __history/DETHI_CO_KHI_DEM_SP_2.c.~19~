
#INCLUDE <TV_PICKIT2_SHIFT_1.C>

UNSIGNED INT8 T0,T0_TAM;

#DEFINE  COUNT      BT0    //DK LED DON
#DEFINE  TIME      BT1
#DEFINE  CLR     BT2
#DEFINE  MOD     BT3

int1 Mode=0;
//!int1 modeBlink4=0;
unsigned INT8 i=0;
//!unsigned int8 dem=0;

//*****************************************************************************
int CDNN(INT1 pin)
{
   IF (!input (pin))
   {
      delay_ms (20);

      IF (!input (pin) )
      {
         WHILE (!input (pin) );
         RETURN 1;
      }
   }

   RETURN 0;
}

//*****************************************************************************
VOID MAIN()
{
   SET_UP_PORT_IC_CHOT () ;
   SETUP_TIMER_0 (T0_EXT_L_TO_H|T0_DIV_1|T0_8_BIT);
   SET_TIMER0 (0) ;
   T0_TAM = T0 = 0;
   XUAT_4LED_7DOAN_4SO (MASO0, MASO0, MASO0, MASO0);

   WHILE (TRUE)
   {
      T0 = GET_TIMER0 ();
      
      //Nhan nut COUNT
      IF (CDNN (COUNT))
      {
         Mode = 1;
         SET_TIMER0 (0);
      }
      
      IF (Mode == 1)
      {
      IF (T0 != T0_TAM)
      {
         T0_TAM = T0;
         XUAT_4LED_7DOAN_GIAIMA_XOA_SO0 (T0) ;
         IF (T0 >= 101) SET_TIMER0 (1);
         if(T0 % 10 == 0)
         {
            IF (i < 4 )
            {
               XUAT_4LED_7DOAN_4SO (0xff, 0xff, 0xff, 0xff);
               delay_ms (500);
               XUAT_4LED_7DOAN_GIAIMA_XOA_SO0 (T0) ;
               delay_ms (500);
               i++;
               
            }

            IF (i == 4)
            {
               
               i = 0;
            }
         }
      }
      }

      
      //Nhan nut CLR
      IF (CDNN (CLR) )
      {
         SET_TIMER0 (0);
         for (INT i = 0; i < 3; i++)
         {
            XUAT_4LED_7DOAN_4SO (0xff, 0xff, 0xff, 0xff);
            delay_ms (500);
            XUAT_4LED_7DOAN_4SO (MASO0, MASO0, MASO0, MASO0);
            delay_ms (500);
         }
      }

      

      
//!      IF (Mode == 1)
//!      {
//!         T0 = GET_TIMER0 ();
//!         XUAT_4LED_7DOAN_GIAIMA_XOA_SO0 (T0) ;
//!         IF (T0 >= 1000) SET_TIMER0 (1) ;
//!         
//!         if(T0 % 10)
//!         {
//!            dem++;
//!         }
//!         
//!         IF (T0 % 10 == 0 &&T0 != 0)
//!         {
//!            IF (i < 4 && ModeBlink4 == 0)
//!            {
//!               XUAT_4LED_7DOAN_4SO (0xff, 0xff, 0xff, 0xff);
//!               delay_ms (500);
//!               XUAT_4LED_7DOAN_GIAIMA_XOA_SO0 (T0) ;
//!               delay_ms (500);
//!               i++;
//!               dem++;
//!            }
//!
//!            IF (i == 4)
//!            {
//!               modeBlink4 = 1;
//!               i = 0;
//!            }
//!         }
//!      }
   }
}

